                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                           <!--<Rectangle Fill="#FF1F2428" HorizontalAlignment="Center" Height="260" Margin="0" RadiusY="10" RadiusX="10" VerticalAlignment="Center" Width="380"/>-->
                           <Border Background="#FF1F2428" CornerRadius="10" Width="380" Height="260">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Ellipse HorizontalAlignment="Center" Height="110" Margin="0,0,5,0" VerticalAlignment="Center" Width="110" Stroke="#FFBFBFBF"/>
                                        <Button Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="8,8,0,0" Height="30" Style="{DynamicResource EditButtonStyle}"
                                                    Visibility="{Binding IsEditBtnVisibility, Converter={StaticResource BoolToVisibility}}" Command="{Binding CommandUserEditClick}"/>
                                        <Button Content="Save" HorizontalAlignment="Center" Height="30" Margin="0,0,75,30" VerticalAlignment="Bottom" Width="72" Background="#FF0FB57D" BorderBrush="{x:Null}" Foreground="#FFE0E4E6" FontSize="16"
                                                    Visibility="{Binding IsSaveBtnVisibility, Converter={StaticResource BoolToVisibility}}" Command="{Binding CommandUserSaveClick}" CommandParameter="{Binding ElementName=groupListComboBox, Path=SelectedItem}"/>
                                        <Button Content="Cancel" HorizontalAlignment="Center" Height="30" Margin="75,0,0,30" VerticalAlignment="Bottom" Width="72" Background="{x:Null}" BorderBrush="#FF0FB57D" Foreground="#FF0FB57D" FontSize="16"
                                                    Visibility="{Binding IsCancleBtnVisibility, Converter={StaticResource BoolToVisibility}}" Command="{Binding CommandUserCancleClick}"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition Height="25"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Button Content="Delete" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="23" Height="23" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0,0,17,0" Style="{DynamicResource DeleteButtonStyle}"
                                                        Visibility="{Binding IsDeleteBtnVisibility, Converter={StaticResource BoolToVisibility}}" Command="{Binding CommandUserDeleteClick}">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="/WPF_MVVM_FusionProject;component/Image/exitNormal2.png"/>
                                                </Button.Background>
                                            </Button>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Label Content="성명" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                        <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="25" Margin="20,1,15,5" Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserName}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Label Content="생년월일" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="25" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserBirth}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="3">
                                            <Label Content="아이디" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="17" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserId}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="4">
                                            <Label Content="비밀번호" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="17" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserPw}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="5">
                                            <Label Content="소속" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="17" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserDepartment}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="6">
                                            <Label Content="사번" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="17" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserEmployeeNum}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="7">
                                            <Label Content="그룹" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="17" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserGroupName}" IsReadOnly="{Binding IsReadOnly}"/>
                                            <ComboBox x:Name="groupListComboBox" ItemsSource="{Binding UserGroupList}" Height="20" Width="125" Margin="20, 0, 0, 2"  DisplayMemberPath="GroupName" IsReadOnly="True" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light"
                                                          Visibility="{Binding IsGroupListVisibility, Converter={StaticResource BoolToVisibility}}" SelectedIndex="{Binding ComboBoxSelectedIndex}">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHeader}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsHeader}" Value="False">
                                                                <Setter Property="Margin" Value="10,0,0,0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Grid.Row="8">
                                            <Label Content="연락처" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="25" Width="57.5" VerticalContentAlignment="Center" FontFamily="/Fonts/#KoPubDotum Light" FontSize="10" Foreground="Gainsboro"/>
                                            <TextBox Style="{DynamicResource ReadOnlyTrueTextBoxStyle}" Height="17" Margin="20,1,15,5"  Width="100" FontSize="10" FontFamily="/Fonts/#KoPubDotum Light" Text="{Binding UserNumber}" IsReadOnly="{Binding IsReadOnly}"/>
                                        </Grid>
                                        <Grid Grid.Row="9">
                                        </Grid>
                                    </Grid>
                                </Grid>
                           </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
