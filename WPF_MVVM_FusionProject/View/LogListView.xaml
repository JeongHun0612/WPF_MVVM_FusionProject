        </Grid>
        <Grid Grid.Row="1">
            <TextBox Text="{Binding Text}" Background="#FF212A30" BorderBrush="#FF212A30" Foreground="WhiteSmoke" FontSize="14" FontFamily="/Fonts/#Roboto Light" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
